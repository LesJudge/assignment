<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Node.js Assignment</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        BODY {
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <%- include('partials/header') %>

        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">

                    <div class="list-group-item">
                        <h4 class="list-group-item-heading"><%= assignment.general.pageTitle %></h4>
                        <% assignment.vouchers.forEach((voucher) => { %>
                             <p class="list-group-item-text"><b><%= voucher.id %>.)</b> <%= voucher.name %></p>
                             <p class="list-group-item-text"><b><%= voucher.body.passenger.panelTitle %></b></p>
                             <p class="list-group-item-text">
                                 <i>
                                     <% voucher.body.passenger.passengers.forEach((person) => { %>
                                        <%= person.name %>,
                                     <% }) %>
                                 </i>
                             </p>
                             <p class="list-group-item-text"><b><%= voucher.body.flight.panelTitle %></b></p>
                              <p class="list-group-item-text">
                                  <i>
                                      <% voucher.body.flight.flights.forEach((flight) => { %>
                                         <%= flight.name %>(<%= flight.id %>), <%= flight.startTitle %>: <%= flight.startDate %> - <%= flight.startTime %> <%= flight.startCity %> <%= flight.startAirport %>(<%= flight.startAirportIATA %>)
                                      <% }) %>
                                  </i>
                              </p>
                              <br>
                        <% }) %>
                    </div>

                 </div>

            </div>
        </div>

        <%- include('partials/footer') %>
    </div>
</body>

</html>
